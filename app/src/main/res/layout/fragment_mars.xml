<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/MarsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24sp"
        android:text="@string/mars"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/MarsDateText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.082" />

    <TextView
        android:id="@+id/MarsDateText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:text="Latest Date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:id="@+id/MtableLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16sp"
        android:stretchColumns="0,1"
        app:layout_constraintTop_toBottomOf="@+id/MarsDateText">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/MarsMaxTemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MaxTemp"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/MarsMinTemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MinTemp"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="40sp" />
        </TableRow>
    </TableLayout>

    <TableLayout
        android:id="@+id/MtableLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24sp"
        android:stretchColumns="0,1,2,3"
        app:layout_constraintTop_toBottomOf="@+id/MtableLayout1">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Pressure"
                android:textAlignment="center"
                android:gravity="center"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Sunrise"
                android:textAlignment="center"
                android:gravity="center"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Sunset"
                android:textAlignment="center"
                android:gravity="center"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UV\n condition"
                android:textAlignment="center"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/MarsPressure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/MarsSunrise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/MarsSunset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/MarsUV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="24sp" />
        </TableRow>


    </TableLayout>
    <TableLayout
        android:id="@+id/MtableLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32sp"
        android:stretchColumns="0,1,2,3,4,5"
        app:layout_constraintTop_toBottomOf="@+id/MtableLayout2">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/md6MaxTemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/d6maxtemp"
                android:textColor="#000000"
                android:textAlignment="center"
                android:textSize="24sp" />
            <TextView
                android:id="@+id/md5MaxTemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/d5maxtemp"
                android:textColor="#000000"
                android:textAlignment="center"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/md4MaxTemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/d4maxtemp"
                android:textColor="#000000"
                android:textAlignment="center"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/md3MaxTemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/d3maxtemp"
                android:textColor="#000000"
                android:textAlignment="center"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/md2MaxTemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/d2maxtemp"
                android:textColor="#000000"
                android:textAlignment="center"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/md1MaxTemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/d1maxtemp"
                android:textColor="#000000"
                android:textAlignment="center"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/md0MaxTemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/d0maxtemp"
                android:textColor="#000000"
                android:textAlignment="center"
                android:textSize="24sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/md6MinTemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/d6mintemp"
                android:textColor="#000000"
                android:textAlignment="center"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/md5MinTemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/d5mintemp"
                android:textColor="#000000"
                android:textAlignment="center"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/md4MinTemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/d4mintemp"
                android:textColor="#000000"
                android:textAlignment="center"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/md3MinTemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/d3mintemp"
                android:textColor="#000000"
                android:textAlignment="center"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/md2MinTemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/d2mintemp"
                android:textColor="#000000"
                android:textAlignment="center"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/md1MinTemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/d1mintemp"
                android:textColor="#000000"
                android:textAlignment="center"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/md0MinTemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/d0mintemp"
                android:textColor="#000000"
                android:textAlignment="center"
                android:textSize="24sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/md6Date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/md5Date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/md4Date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/md3Date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/md2Date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/md1Date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/md0Date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="20sp" />

        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/infoBtn"
        android:layout_width="27dp"
        android:layout_height="30dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#D3D1D1"
        android:text="@string/button_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>